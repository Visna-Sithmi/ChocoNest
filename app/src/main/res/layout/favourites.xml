<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/favourites_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_gradient"
    tools:context=".FavouritesActivity">

    <!-- App Logo -->
    <ImageView
        android:id="@+id/logoImage"
        android:layout_width="220dp"
        android:layout_height="160dp"
        android:contentDescription="@string/app_name"
        app:srcCompat="@drawable/logo"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Favourite Items Scroll -->
    <ScrollView
        android:id="@+id/favScroll"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintTop_toBottomOf="@id/logoImage"
        app:layout_constraintBottom_toTopOf="@id/footerBar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="16dp">

        <LinearLayout
            android:id="@+id/favContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="8dp">

            <!-- Example Favourite Item -->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/panel1"
                android:padding="12dp"
                android:layout_marginBottom="12dp">

                <!-- Product Image -->
                <ImageView
                    android:id="@+id/favImage"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/im0"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"/>

                <!-- Star Icon -->
                <ImageView
                    android:id="@+id/favStar"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:src="@android:drawable/btn_star_big_on"
                    app:tint="@color/dark_chocolate"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"/>

                <!-- Info Column -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingStart="12dp"
                    app:layout_constraintStart_toEndOf="@id/favImage"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintEnd_toStartOf="@id/favStar"
                    app:layout_constraintBottom_toBottomOf="parent">

                    <TextView
                        android:id="@+id/favItemName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/spicy_rice_regular"
                        android:text="@string/it1"
                        android:textColor="@color/dark_chocolate"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/favItemSize"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:fontFamily="@font/voltaire_regular"
                        android:text="@string/sz"
                        android:textColor="@color/dark_chocolate"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/favItemPrice"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:fontFamily="@font/voltaire_regular"
                        android:text="@string/pc1"
                        android:textColor="@color/dark_chocolate"
                        android:textSize="15sp"
                        android:textStyle="bold" />

                    <!-- Add to Cart -->
                    <Button
                        android:id="@+id/btnFavAddToCart"
                        android:layout_width="134dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="50dp"
                        android:layout_marginTop="8dp"
                        android:backgroundTint="@color/dark_chocolate"
                        android:fontFamily="@font/spicy_rice_regular"
                        android:text="@string/addtocart"
                        android:textColor="@color/cream" />
                </LinearLayout>
            </androidx.constraintlayout.widget.ConstraintLayout>

        </LinearLayout>
    </ScrollView>

    <!-- Footer -->
    <include
        layout="@layout/footer_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
