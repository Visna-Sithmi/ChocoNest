<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/payment_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_gradient"
    tools:context=".PaymentActivity">

    <!-- App Logo -->
    <ImageView
        android:id="@+id/logoImage"
        android:layout_width="220dp"
        android:layout_height="160dp"
        android:contentDescription="@string/app_name"
        app:srcCompat="@drawable/logo"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Cream Panel (panel1 background) -->

    <!-- Footer -->
    <LinearLayout
        android:id="@+id/paymentPanel"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="24dp"
        android:background="@drawable/panel1"
        android:orientation="vertical"
        android:padding="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/logoImage">

        <!-- Title -->
        <TextView
            android:id="@+id/paymentTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="12dp"
            android:fontFamily="@font/spicy_rice_regular"
            android:text="@string/uploadslip"
            android:textColor="@color/dark_chocolate"
            android:textSize="20sp" />

        <!-- Name -->
        <EditText
            android:id="@+id/etName"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginBottom="6dp"
            android:background="@drawable/panel1"
            android:drawableStart="@android:drawable/ic_menu_edit"
            android:hint="@string/fullname"
            android:inputType="textPersonName"
            android:padding="8dp"
            android:textColor="@color/dark_chocolate" />

        <!-- Address -->
        <EditText
            android:id="@+id/etAddress"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginBottom="6dp"
            android:background="@drawable/panel1"
            android:drawableStart="@android:drawable/ic_menu_mylocation"
            android:hint="Address"
            android:inputType="textPostalAddress"
            android:padding="8dp"
            android:textColor="@color/dark_chocolate" />

        <!-- Phone Number -->
        <EditText
            android:id="@+id/etPhone"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/panel1"
            android:drawableStart="@android:drawable/ic_menu_call"
            android:hint="@string/phone"
            android:inputType="phone"
            android:padding="8dp"
            android:textColor="@color/dark_chocolate" />

        <!-- Placeholder for Uploaded Slip -->
        <ImageView
            android:id="@+id/slipPreview"
            android:layout_width="317dp"
            android:layout_height="120dp"
            android:layout_margin="8dp"
            android:background="@drawable/panel1"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_upload" />

        <!-- Upload Button -->
        <Button
            android:id="@+id/btnUploadSlip"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:backgroundTint="@color/dark_chocolate"
            android:fontFamily="@font/spicy_rice_regular"
            android:text="@string/choose"
            android:textColor="@color/cream" />

        <!-- Submit Button -->
        <Button
            android:id="@+id/btnSubmitPayment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:backgroundTint="@color/dark_chocolate"
            android:fontFamily="@font/spicy_rice_regular"
            android:text="@string/submit"
            android:textColor="@color/cream" />
    </LinearLayout>

    <include
        layout="@layout/footer_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>
