<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/details_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_gradient"
    tools:context=".DetailsActivity">

    <!-- App Logo -->
    <ImageView
        android:id="@+id/logoImage"
        android:layout_width="240dp"
        android:layout_height="191dp"
        android:contentDescription="@string/app_name"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/logo" />

    <!-- Cream Panel (using panel1.xml as background) -->
    <LinearLayout
        android:id="@+id/chocoPanel"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/panel1"
        android:padding="16dp"
        android:layout_margin="24dp"
        app:layout_constraintTop_toBottomOf="@id/logoImage"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Chocolate Image -->
        <ImageView
            android:id="@+id/chocoImage"
            android:layout_width="319dp"
            android:layout_height="160dp"
            android:contentDescription="@string/it1"
            android:scaleType="fitCenter"
            android:src="@drawable/im0" />

        <!-- In Stock status -->

        <!-- Description -->
        <!-- In Stock status -->
        <TextView
            android:id="@+id/stockStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="8dp"
            android:fontFamily="@font/voltaire_regular"
            android:text="@string/stock"
            android:textColor="@android:color/holo_green_dark"
            android:textSize="17sp" />


        <TextView
            android:id="@+id/chocoDescription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:fontFamily="@font/voltaire_regular"
            android:gravity="center"
            android:text="@string/description"
            android:textColor="@color/dark_chocolate"
            android:textSize="18sp" />

        <!-- Size status -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="6dp"
            android:weightSum="2">

            <!-- Size -->
            <TextView
                android:id="@+id/chocoSize"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                android:fontFamily="@font/voltaire_regular"
                android:gravity="start"
                android:text="@string/sz"
                android:textColor="@color/dark_chocolate"
                android:textSize="14sp" />

            <!-- Price -->
            <TextView
                android:id="@+id/chocoPrice"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:layout_weight="1"
                android:fontFamily="@font/spicy_rice_regular"
                android:gravity="end"
                android:text="@string/pc1"
                android:textColor="@color/dark_chocolate"
                android:textSize="16sp" />
        </LinearLayout>
        <!-- Buttons Row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="12dp"
            android:weightSum="2">

            <!-- Add to Favourites Button -->
            <Button
                android:id="@+id/btnAddToFavourites"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:layout_weight="1"
                android:backgroundTint="@color/dark_chocolate"
                android:fontFamily="@font/spicy_rice_regular"
                android:paddingHorizontal="12dp"
                android:paddingVertical="8dp"
                android:text="@string/addtofav"
                android:textColor="@color/cream" />

            <!-- Add to Cart Button -->
            <Button
                android:id="@+id/btnAddToCart"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_weight="1"
                android:backgroundTint="@color/dark_chocolate"
                android:fontFamily="@font/spicy_rice_regular"
                android:paddingHorizontal="12dp"
                android:paddingVertical="8dp"
                android:text="@string/addtocart"
                android:textColor="@color/cream" />
        </LinearLayout>
    </LinearLayout>

    <!-- Footer -->
    <include
        layout="@layout/footer_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
