<!-- res/drawable/spinner_background.xml -->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- background shape -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/cream" />
            <corners android:radius="8dp" />
        </shape>
    </item>

    <!-- arrow icon aligned to end -->
    <item android:gravity="end|center_vertical"
        android:right="12dp"
        android:drawable="@drawable/ic_arrow_drop_down"/>
</layer-list>
